{
  "name": "Letra",
  "description": "Passively learn a new word in a different language every day.",
  "version": null,
  "manifest_version": 2,
  "permissions": ["storage"],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "browser_action": {
    "default_title": "Letra",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
